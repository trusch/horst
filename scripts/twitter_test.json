{
    "plugins": "./build/bin/plugins",
    "instances" : {
        "twitter" : {
            "class" : "TwitterSource",
            "output:0" : "projector:0",
            "track": "obama,trump",
            "consumerKey" : "<INSERT-YOURS>",
            "consumerSecret" : "<INSERT-YOURS>",
            "accessTokenKey" : "<INSERT-YOURS>",
            "accessTokenSecret" : "<INSERT-YOURS>"
        },
        "projector" : {
            "class" : "Projector",
            "output:0" : "normalizer:0",
            "format": "@text"
        },
        "normalizer" : {
            "class" : "TextNormalizer",
            "output:0" : "to_words:0",
            "cutset": ",.!?\"':_-\n\/@#",
            "tolower": true
        },
        "to_words" : {
            "class": "TextSplitter",
            "output:0" : "filter:0"
        },
        "filter": {
            "class": "RegexFilter",
            "output:0" : "histogram:0",
            "regex": "obama|trump"
        },
        "histogram": {
            "class": "IncrementalWordHistogram",
            "output:0": "logger:0",
            "decayFactor": 0.9,
            "lowerThreshold": 0.1
        },
        "logger" : {
            "class" : "Logger"
        }
    }
}
